{
  "version": "1.0.0",
  "brand": "Reconstruir",
  "modes": {
    "light": {
      "color": {
        "brand": "#6EE7B7",
        "bg": "#FFFFFF",
        "bgMuted": "#F3F4F6",
        "text": "#111827",
        "textMuted": "#6B7280",
        "border": "#E5E7EB",
        "success": "#16A34A",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "info": "#3B82F6"
      },
      "radius": {
        "sm": 8,
        "md": 12,
        "lg": 16
      },
      "space": [
        4,
        8,
        12,
        16,
        24,
        32,
        48
      ],
      "font": {
        "family": "Inter, Poppins, system-ui",
        "size": {
          "body": 16,
          "h1": 32,
          "h2": 24,
          "h3": 20
        }
      },
      "elevation": {
        "card": "0 1px 2px rgba(0,0,0,0.06)",
        "raised": "0 4px 12px rgba(0,0,0,0.08)"
      },
      "motion": {
        "duration": {
          "fast": 180,
          "base": 220
        },
        "easing": {
          "inOut": "cubic-bezier(0.2, 0, 0, 1)"
        }
      }
    },
    "dark": {
      "color": {
        "brand": "#6EE7B7",
        "bg": "#0B0F0E",
        "bgMuted": "#111827",
        "text": "#F9FAFB",
        "textMuted": "#9CA3AF",
        "border": "#1F2937",
        "success": "#34D399",
        "warning": "#F59E0B",
        "error": "#F87171",
        "info": "#60A5FA"
      },
      "radius": {
        "sm": 8,
        "md": 12,
        "lg": 16
      },
      "space": [
        4,
        8,
        12,
        16,
        24,
        32,
        48
      ],
      "font": {
        "family": "Inter, Poppins, system-ui",
        "size": {
          "body": 16,
          "h1": 32,
          "h2": 24,
          "h3": 20
        }
      },
      "elevation": {
        "card": "0 1px 2px rgba(0,0,0,0.5)",
        "raised": "0 6px 20px rgba(0,0,0,0.45)"
      },
      "motion": {
        "duration": {
          "fast": 180,
          "base": 220
        },
        "easing": {
          "inOut": "cubic-bezier(0.2, 0, 0, 1)"
        }
      }
    }
